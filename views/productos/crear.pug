extends ../layout/index

block contenido
        .py-10
            img.logo.mt-8.mx-auto.max-w-md(src='../img/logo3.jpg')
            h2.text-center.text-3xl.font-extrabold= pagina

            div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
                form.space-y-8
                    div.space-y-5
                        h2.text-lg.leading-6.font-medium.text-gray-900.font-extrabold Informacion general
                        p.text-gray-600 Añade información sobre el producto en venta 

                    
                        div 
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="descripcion") Titulo de producto
                            input#descripcion(class=  "w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder= "descripcion"    name="descripcion") 

                        div.space-y-5
                        h2.text-lg.leading-6.font-medium.text-gray-900.font-extrabold Descripción
                        textarea#titulo.w-full.px-3.py-2.border.border.gray-300.rounded-md.placeholder-gray-400(placeholder="caracteristicas",name="titulo", type="text", cols="30", rows="10") 
                        
                        div(class="md:flex md:gap-4")

                            div(class="md:w-1/2") 
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="categoria") Categoria
                                select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")    
                                    option(value="") -Seleccione la categoría
                                    each categoria in categorias
                                        option(value=categoria.id)= categoria.nombre


                            div(class="md:w-1/2") 
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="categoria") Precio
                                select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")    
                                    option(value="") -Seleccione Precio
                                    each precio in precios
                                        option(value=precio.id)= precio.nombre
                        
block scripts 
        script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
        script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
        script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
        script(src="/js/mapa.js")